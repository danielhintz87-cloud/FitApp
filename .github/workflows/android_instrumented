name: Android Instrumented Tests

on:
  pull_request:
  workflow_dispatch:

permissions:
  contents: read

jobs:
  connected-tests:
    runs-on: ubuntu-latest
    timeout-minutes: 60

    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: '21'

      - uses: gradle/gradle-build-action@v3

      # Installiert notwendige SDK-Komponenten (plattform 34 + build-tools)
      - name: Prepare Android SDK
        uses: android-actions/setup-android@v3
      - name: Ensure platforms & build-tools
        run: |
          sdkmanager --install "platform-tools" "platforms;android-34" "build-tools;34.0.0"

      # Emulator starten und connectedDebugAndroidTest fahren
      - name: Run connected tests (API 30)
        uses: reactivecircus/android-emulator-runner@v2
        with:
          api-level: 30
          arch: x86_64
          target: google_apis
          emulator-options: -no-window -gpu swiftshader_indirect -noaudio -no-boot-anim -no-snapshot
          disable-animations: true
          script: |
            ./gradlew --stacktrace \
              assembleDebug \
              assembleAndroidTest \
              connectedDebugAndroidTest

      - name: Upload instrumented test reports
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: connected-test-reports
          path: |
            **/build/reports/androidTests/**
            **/build/outputs/androidTest-results/**
          retention-days: 7
          if-no-files-found: warn
