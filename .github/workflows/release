name: Release Build

on:
  push:
    tags:
      - 'v*'

permissions:
  contents: read

jobs:
  bundle:
    runs-on: ubuntu-latest
    timeout-minutes: 60

    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: '21'

      - uses: gradle/gradle-build-action@v3

      # Optional: Signing vorbereiten (nur wenn du signierst)
      # - name: Decode signing keystore
      #   run: echo "${{ secrets.ANDROID_KEYSTORE_BASE64 }}" | base64 -d > keystore.jks

      - name: Build Release bundle
        env:
          # Beispiel, falls du mit BuildConfig Keys arbeitest:
          GEMINI_API_KEY: ${{ secrets.GEMINI_API_KEY }}
          PERPLEXITY_API_KEY: ${{ secrets.PERPLEXITY_API_KEY }}
        run: ./gradlew --stacktrace bundleRelease

      - name: Upload AAB & mapping
        uses: actions/upload-artifact@v4
        with:
          name: app-release
          path: |
            **/build/outputs/bundle/release/*.aab
            **/build/outputs/mapping/release/mapping.txt
          retention-days: 14
          if-no-files-found: error
