<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Declare this as a Wear OS app -->
    <uses-feature android:name="android.hardware.type.watch" />

    <!-- Permissions required for fitness tracking on Wear OS -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.HIGH_SAMPLING_RATE_SENSORS" />
    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" />
    
    <!-- Data synchronization with phone -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="@string/app_name"
        android:icon="@android:drawable/sym_def_app_icon"
        android:theme="@style/Theme.FitApp.Wear"
        android:allowBackup="true">

        <!-- Main Wear OS Activity -->
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FitApp.Wear"
            android:taskAffinity="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Workout tracking service -->
        <service
            android:name=".services.WearWorkoutTrackingService"
            android:enabled="true"
            android:exported="false" />

        <!-- Data sync service with phone -->
        <service
            android:name=".services.WearDataSyncService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <data android:scheme="wear" android:host="*" />
            </intent-filter>
        </service>

        <!-- Capability declaration for phone companion app discovery -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="false" />
            
    </application>
</manifest>